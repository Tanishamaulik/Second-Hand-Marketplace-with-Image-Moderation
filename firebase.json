{
    "functions": {
        "source": "functions",
        "codebase": "default",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "firestore": {
        "rules": "firestore.rules"
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "auth": {
            "port": 9099
        },
        "ui": {
            "enabled": true
        },
        "storage": {
            "port": 9199
        },
        "singleProjectMode": true
    }
}